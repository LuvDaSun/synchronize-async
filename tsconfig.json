{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "bin",
    "rootDir": "src",
    "noEmitHelpers": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015"
    ]
  },
  "compileOnSave": false,
  "includeGlob": [
    "src/**/*.ts"
  ]
}